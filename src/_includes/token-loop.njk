              <div class="mb-16">
                <h3 class="fluid-8-b "><a href="{{ component.data.titulo }}">{{ component.data.titulo }}  </a></h3>
                  <span class="text-12-r">{{ component.data.descripcion }}</span>
              </div>

              {% set sortedTags = component.data.tags | sort %}
           
