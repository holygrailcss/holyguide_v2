                  <div class="p-xs">
                    <span>Hex:</span>
                    {{ color.hex }}
                  </div>
                  <div class="p-xs">
                    <span>Variable Color:</span> ${{ color.variable }}
                  </div>
                  <div class="p-xs">
                    <span>Font color:</span> .{{ color.font }}</div>
                  <div class="p-xs">
                    <span >Background Color:</span>
                    .{{ color.bg }}</div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
        <h2>Feel</h2>
        <div class="row">
          <div class="col-xs-12">
            {% for color in global.coloresFeel %}
              <div class="guide-colors text-center">
                <div class="guide-colors-bg text-center" style="background-color:{{ color.hex }};"></div>
                <div class="guide-colors-text">
                  <div class="p-xs">
                    <span>Hex:</span>
                    {{ color.hex }}
                  </div>
                  <div class="p-xs">
                    <span>Variable Color:</span> ${{ color.variable }}
                  </div>
                  <div class="p-xs">
                    <span>Font color:</span> .{{ color.font }}</div>
                  <div class="p-xs">
                    <span >Background Color:</span>
                    .{{ color.bg }}</div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</section>